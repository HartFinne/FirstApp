@{
    ViewData["Title"] = "Items";
}

<h3>Items</h3>

<div id="item-list">
    <!-- Items will load here via AJAX -->
    <div id="item-list" class="d-flex justify-content-center align-items-center" style="height: 200px;">
    <div class="text-center" id="loading-spinner">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <p>Loading items...</p>
    </div>
</div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    $(document).ready(function () {
        $("#item-list").load("@Url.Action("LoadItems", "Items")", function () {
            // Remove spinner after content is loaded
            $("#loading-spinner").fadeOut();
        });
    });
</script>






